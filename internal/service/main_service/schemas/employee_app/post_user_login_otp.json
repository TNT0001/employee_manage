{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "user_credential": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "user_name": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 255
                },
                "password": {
                    "type": "string",
                    "minLength": 1
                },
                "otp": {
                    "type": "string",
                    "minLength": 1
                }
            }
        }
    }
}
